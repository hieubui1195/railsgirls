<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table class="table table-striped table-bordered table-list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td>
            <%= link_to 'Show', idea, class: "btn btn-success"%>
            <%= link_to 'Edit', edit_idea_path(idea), class: "btn btn-info" %>
            <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
